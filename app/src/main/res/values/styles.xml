<resources>
    <!-- Base theme for other activities (e.g., Splash Screen) -->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/darkBackgroundColor</item>
    </style>

    <!-- Theme for MainActivity and other UI components -->
    <style name="Theme.DailySpark.Main" parent="Theme.DailySpark.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:windowBackground">@color/darkBackgroundColor</item>
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="fontFamily">@font/daily_spark_font</item>
    </style>

    <!-- Theme for SettingsActivity -->
    <style name="Theme.DailySpark.Settings" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:windowBackground">@color/darkBackgroundColor</item>
        <item name="android:textColor">@color/lightTextColor</item>
    </style>

    <!-- Base theme for MainActivity without a default action bar -->
    <style name="Theme.DailySpark.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/accentColor</item>
        <item name="android:windowBackground">@color/darkBackgroundColor</item>
        <item name="android:textColor">@color/lightTextColor</item>
        <item name="fontFamily">@font/daily_spark_font</item>
    </style>

    <style name="NavigationDrawerTextAppearance" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">20sp</item> <!-- Set the desired text size -->
        <item name="android:textColor">@color/lightTextColor</item> <!-- Customize text color if needed -->
    </style>

</resources>
